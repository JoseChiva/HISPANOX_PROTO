      TBVAL(NBPAR) = [F:SIV]BPCINV

      NBPAR += 1
      TBPAR(NBPAR) = "clientfin"
      TBVAL(NBPAR) = [F:SIV]BPCINV

      NBPAR += 1
      TBPAR(NBPAR) = "datedeb"
      TBVAL(NBPAR) = [F:ZSIH1]ACCDAT

      NBPAR += 1
      TBPAR(NBPAR) = "datefin"
      TBVAL(NBPAR) = [F:ZSIH1]ACCDAT

      NBPAR += 1
      TBPAR(NBPAR) = "typedeb"
      TBVAL(NBPAR) = "1"

      NBPAR += 1
      TBPAR(NBPAR) = "typefin"
      TBVAL(NBPAR) = "5"

      NBPAR += 1
      TBPAR(NBPAR) = "codimp"
      If [F:SIV]STARPT = 2
        TBVAL(NBPAR) = 'Reimpresión'#num$([F:SIV]STARPT) #vireblc(num$([F:SIV]STARPT),4)
      Else
        TBVAL(NBPAR) = "Impresión" #num$([F:SIV]STARPT)
      Endif
      NBPAR += 1
      TBPAR(NBPAR) = "usr"
      TBVAL(NBPAR) = GUSER

      NBPAR += 1
      TBPAR(NBPAR) = "nadxuid"
      TBVAL(NBPAR) = vireblc(num$(adxuid(1)),4)

#      NBPAR+=1
#      TBPAR(NBPAR) = "ncopias"
