      Else
        If ZCOP>1
          For NX= 1 To ZCOP
            Call ETAT(ZINFORME,ZDESTINO,"",0,"",TBPAR,TBVAL) From AIMP3
          Next
        Else
          Call ETAT(ZINFORME,ZDESTINO,"",0,"",TBPAR,TBVAL) From AIMP3
        Endif
        Call MRK_FAC(P_NUM,0)
      Endif

    Endif


