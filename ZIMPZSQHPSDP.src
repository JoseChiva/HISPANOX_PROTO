#Infbox ACTION
Local Char LUSER(50)
  LUSER = GUSER
  GUSER = "WEB"
  Case ACTION
    When "AP_IMPORT"      : Gosub AP_IMPORT
    When "IMP_FERME"      : Gosub IMP_FERME
    When Default
  Endcase
  GUSER = LUSER
Return

